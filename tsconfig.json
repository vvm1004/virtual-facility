{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/alarms": [
        "libs/alarms/src"
      ],
      "@app/alarms/*": [
        "libs/alarms/src/*"
      ],
      "@app/buildings": [
        "libs/buildings/src"
      ],
      "@app/buildings/*": [
        "libs/buildings/src/*"
      ],
      "@app/tracing": [
        "libs/tracing/src"
      ],
      "@app/tracing/*": [
        "libs/tracing/src/*"
      ],
      "@app/workflows": [
        "libs/workflows/src"
      ],
      "@app/workflows/*": [
        "libs/workflows/src/*"
      ]
    }
  }
}